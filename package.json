{
  "name": "agijobs-sovereign-labor-v0p1",
  "version": "0.1.0-alpha",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "demo/*"
  ],
  "scripts": {
    "compile": "truffle compile",
    "verify:mainnet": "truffle run verify IdentityRegistry JobRegistry PlatformRegistry StakeManager SystemPause ValidationModule --network mainnet --force-license MIT",
    "lint:branch": "node scripts/check-branch-name.mjs",
    "lint:sol": "solhint --max-warnings=0 'contracts/**/*.sol'",
    "ci:governance": "node scripts/check-governance-matrix.mjs",
    "test": "truffle test --migrate-none",
    "test:truffle:ci": "truffle test --migrate-none --compile-none",
    "test:hardhat": "hardhat test",
    "test:foundry": "forge test",
    "test:ci": "npm test && npm run test:hardhat && npm run test:foundry",
    "deploy:truffle:mainnet": "truffle migrate --network mainnet --compile-all",
    "deploy:hardhat:mainnet": "hardhat run hardhat/scripts/deploy-mainnet.js --network mainnet",
    "deploy:foundry:mainnet": "forge script foundry/script/DeployMainnet.s.sol:DeployMainnet --rpc-url $MAINNET_RPC --broadcast --slow",
    "owner:validator-policy": "truffle exec scripts/owner-apply-validator-policy.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/solidity-analyzer-linux-x64-gnu": "^0.1.2",
    "@openzeppelin/contracts": "^5.1.0",
    "@truffle/hdwallet-provider": "^2.1.15",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^6.13.0",
    "hardhat": "^2.20.1",
    "solhint": "^6.0.1",
    "truffle": "^5.11.5",
    "truffle-plugin-verify": "^0.6.7"
  }
}
